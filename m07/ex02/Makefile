#  | $$$$  /$$$| $$  \ $| $$ /$$/| $$     | $$       | $$ | $$     | $$        #
#  | $$ $$/$$ $| $$$$$$$| $$$$$/ | $$$$$  | $$$$$    | $$ | $$     | $$$$$     #
#  | $$  $$$| $| $$__  $| $$  $$ | $$__/  | $$__/    | $$ | $$     | $$__/     #
#  | $$\  $ | $| $$  | $| $$\  $$| $$     | $$       | $$ | $$     | $$        #
#  | $$ \/  | $| $$  | $| $$ \  $| $$$$$$$| $$      /$$$$$| $$$$$$$| $$$$$$$$  #
#  |__/     |__|__/  |__|__/  \__|________|__/     |______|________|________/  #
#                                                                              #
# **************************************************************************** #

# **************************************************************************** #
# ***************************    COLOR CODES    ****************************** #
# **************************************************************************** #

RST			:= \e[0m
RED			:= \e[31m
GRN			:= \e[32m
CYN			:= \e[36m

# **************************************************************************** #
# ***************************    COMPILATION   ******************************* #
# **************************************************************************** #

CC			:= c++
CC_FLAGS	:= -Wall -Wextra -Werror -std=c++98

NAME		:= Array
MAIN		:= main.cpp
HEAD		:= Array.hpp

# **************************************************************************** #
# ****************************    FUNCTIONS    ******************************* #
# **************************************************************************** #

define print_status
	@printf "%21s $2$3 successfully\e[0m\n" "$1 :"
endef

# **************************************************************************** #
# *****************************    RECIPES    ******************************** #
# **************************************************************************** #

.PHONY: all clean fclean re

all: ${NAME}

${NAME}: ${MAIN} ${HEAD}
	@${CC} ${CC_FLAGS} ${MAIN} -o ${NAME}
	$(call print_status, ${NAME}, ${GRN}, "compiled")

clean:
	@rm -f ${NAME}
	$(call print_status, ${NAME}, ${RED}, "deleted")

fclean: clean

re: fclean all
